// Place your key bindings in this file to override the defaults
[
  // Pass alt-arrow to the terminal https://github.com/microsoft/vscode/issues/136339
  {
    "key": "alt+left",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "\u001b[1;3D"
    },
    "when": "terminalFocus"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.terminal.sendSequence",
    "args": {
      "text": "\u001b[1;3C"
    },
    "when": "terminalFocus"
  },
  // Cmd+arrow to navigate between panes.
  {
    "key": "cmd+left",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "cmd+right",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "cmd+up",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "cmd+down",
    "command": "workbench.action.navigateDown"
  }
]