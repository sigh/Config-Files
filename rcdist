#!/usr/bin/env bash
#
# Distribute config files to $hosts

declare -a hosts

hosts=(
)

# change into home dir (which will be synced to $HOME)
cd home

options="--compress --stats --recursive --perms --times --rsh=ssh"

# sync with localhost
rsync $options . "$HOME" && reload-all

# sync with remote hosts
for host in "${hosts[@]}" ; do
    echo
    echo "Updating host: $host"
    rsync $options . "$host:~" && ssh "$host" reload-all
done
